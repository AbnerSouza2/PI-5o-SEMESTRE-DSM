generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        Int    @id @default(autoincrement())
  name      String
  imagePath String?
  users     User[] 
}

model User {
  id          Int    @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String @unique
  password    String
  phoneNumber String?
  cpf         String @unique
  storeId     Int
  store       Store  @relation(fields: [storeId], references: [id])
}


